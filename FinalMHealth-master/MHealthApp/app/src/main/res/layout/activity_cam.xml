<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".camActivity"
    android:orientation="vertical">

    <TextureView
        android:id="@+id/cam_texture"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:screenOrientation="portrait"
       />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <ImageView
            android:id="@+id/hrt_img"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/hrt_animation"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/cam_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:text="Place your finger lightly on the camera lens." />
        <TextView
            android:id="@+id/cam_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Hold it for some time" />


    </FrameLayout>

</LinearLayout>