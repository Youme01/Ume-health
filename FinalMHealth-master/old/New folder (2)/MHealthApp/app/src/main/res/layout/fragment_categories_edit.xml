<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_cat_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name Of Categories"
                android:textColor="#183FBB"
                android:textSize="18sp"
                android:textStyle="italic"
                android:fontFamily="serif"
                android:paddingRight="15dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/name_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint = "Enter Categories Name"
                android:textSize="18sp"
                android:fontFamily="serif"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/parentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parent Id"
                android:textColor="#183FBB"
                android:textSize="18sp"
                android:textStyle="italic"
                android:fontFamily="serif"
                android:paddingRight="40dp"

                android:layout_marginLeft="20dp"

                />
            <Spinner
                android:id="@+id/spinner_cat_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_cat_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#183FBB"
                android:textSize="18sp"
                android:textStyle="italic"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_marginLeft="20dp"

                />


        </LinearLayout>




    </LinearLayout>
</ScrollView>