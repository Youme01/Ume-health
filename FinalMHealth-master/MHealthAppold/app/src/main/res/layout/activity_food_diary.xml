<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/yesterdaytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = ""
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/todaytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="22dp" />
            <TextView
                android:id="@+id/tomorrowtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="24dp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="20px"
            android:layout_marginRight="10px"
            android:background="#E5D5D9">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/goals_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5170"
                    android:textColor="#183FBB"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:id="@+id/goalstv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goals"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#183FBB">
            </View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/cal_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#183FBB"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:id="@+id/cal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#183FBB">
            </View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/cal_left_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#183FBB"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:id="@+id/cal_left_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                >

                <TextView
                    android:id="@+id/breakfast-txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Breakfast"
                    android:textColor="#183FBB"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:id="@+id/addB"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    android:textColor="#3661EB"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/lunch-txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Lunch"
                    android:textColor="#183FBB"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:id="@+id/addL"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    android:textColor="#3661EB"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:textStyle="bold" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/snack-txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Snacks"
                    android:textColor="#183FBB"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                     />

                <TextView
                    android:id="@+id/addS"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    android:textColor="#3661EB"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:textStyle="bold" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/Dinner-txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Dinner"
                    android:textColor="#183FBB"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:id="@+id/addD"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="+"
                    android:textColor="#3661EB"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="100px"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_diary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Complete Diary"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:background="#183FBB"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>










