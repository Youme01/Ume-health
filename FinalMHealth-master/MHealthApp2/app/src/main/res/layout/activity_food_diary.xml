<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/todaytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="20px"
            android:layout_marginRight="10px"
            android:background="#E5D5D9">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/goals_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5170"
                    android:textColor="#183FBB"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:id="@+id/goalstv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Goals"
                    android:textSize="15sp" />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#183FBB">
            </View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/cal_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#183FBB"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:id="@+id/cal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="15sp"
                    android:fontFamily="serif"
                    />
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#183FBB">
            </View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/cal_left_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#183FBB"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    />

                <TextView
                    android:id="@+id/cal_left_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining"
                    android:textSize="15sp"
                    android:fontFamily="serif"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50px"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/breakfast-txt"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:gravity=""
                    android:text="BreakFast"
                    android:textColor="#183FBB"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/addB"
                    android:layout_width="3dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/circular_button"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#FCFCFD"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TableLayout
                android:id="@+id/tableLayoutBreakfastItems"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tableRowBreakfastItems"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/textViewBreakfastItemsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:text=""
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewBreakfastItemsEnergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text=""
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowBreakfastItemsSub"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/textViewBreakfastItemsSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </TableRow>

            </TableLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/lunch-txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Lunch"
                    android:gravity=""
                    android:layout_weight="4"
                    android:textColor="#183FBB"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/addL"
                    android:layout_width="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="30dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="+"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:background="@drawable/circular_button"/>
            </LinearLayout>
            <TableLayout
                android:id="@+id/tableLayoutLunchItems"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

            <TableRow
                android:id="@+id/tableRowLunchItems"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewLunchItemsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text=""
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewLunchItemsEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text=""
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRowLunchItemsSub"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewLunchItemsSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </TableRow>

        </TableLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/snack-txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:gravity=""
                    android:text="Snacks"
                    android:textColor="#183FBB"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addS"
                    android:layout_width="3dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circular_button"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TableLayout
                android:id="@+id/tableLayoutSnacksItems"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <TableRow
                    android:id="@+id/tableRowSnacksItems"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewSnacksItemsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:text=""
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewSnacksItemsEnergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text=""
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowSnacksItemsSub"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewSnacksItemsSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:weightSum="5">

                <TextView
                    android:id="@+id/Dinner-txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Dinner"
                    android:textColor="#183FBB"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:gravity=""
                    android:layout_weight="4"
                    />

                <TextView
                    android:id="@+id/addD"
                    android:layout_width="3dp"
                    android:layout_height="30dp"
                    android:text="+"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/circular_button"/>
            </LinearLayout>

            <TableLayout
                android:id="@+id/tableLayoutDinnerItems"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <TableRow
                    android:id="@+id/tableRowDinnerItems"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewDinnerItemsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:text=""
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewDinnerItemsEnergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text=""
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowDinnerItemsSub"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewDinnerItemsSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </TableRow>

            </TableLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="100px"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_diary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Complete Diary"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/custom_button"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>










